<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.towingpro.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.towingpro.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_serviceFragment"
            app:destination="@id/serviceFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_forgetPassword"
            app:destination="@id/forgetPassword" />
    </fragment>
    <fragment
        android:id="@+id/serviceFragment"
        android:name="com.example.towingpro.service.ServiceFragment"
        android:label="fragment_service"
        tools:layout="@layout/fragment_service">
        <action
            android:id="@+id/action_serviceFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/serviceFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_serviceFragment_to_towingRequest"
            app:destination="@id/towingRequest" />
        <action
            android:id="@+id/action_serviceFragment_to_mechanicRequest"
            app:destination="@id/mechanicRequest" />
    </fragment>
    <activity
        android:id="@+id/mapFragment"
        android:name="com.example.towingpro.map.MapActivity"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.towingpro.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_serviceFragment"
            app:destination="@id/serviceFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/mechanicRequest"
        android:name="com.example.towingpro.service.MechanicRequest"
        android:label="request_mechanic"
        tools:layout="@layout/request_mechanic">
        <action
            android:id="@+id/action_mechanicRequest_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/towingRequest"
        android:name="com.example.towingpro.service.TowingRequest"
        android:label="request_towing"
        tools:layout="@layout/request_towing">
        <action
            android:id="@+id/action_towingRequest_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPassword"
        android:name="com.example.towingpro.login.ForgetPassword"
        android:label="password_recovery"
        tools:layout="@layout/password_recovery" >
        <action
            android:id="@+id/action_forgetPassword_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>